{
    "name": "gshell",
    "version": "0.2.0",
    "description": "Interactive graphical desktop environment for LiveG OS.",
    "main": "src/main.js",
    "author": "LiveG Technologies",
    "repository": "https://github.com/LiveGTech/gShell",
    "scripts": {
        "gshell": "electron . --disable-gpu",
        "dist": "electron-builder"
    },
    "devDependencies": {
        "electron": "github:castlabs/electron-releases#v22.0.0+wvcus",
        "electron-builder": "^22.10.3"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "minimist": "^1.2.5",
        "mkdirp": "^0.5.6"
    },
    "build": {
        "appId": "tech.liveg.gshell",
        "productName": "gShell",
        "copyright": "Copyright Â© LiveG. All Rights Reserved.",
        "electronDownload": {
            "mirror": "https://github.com/castlabs/electron-releases/releases/download/v"
        },
        "extraResources": [
            {
                "from": "shell",
                "to": "shell"
            }
        ],
        "directories": {
            "buildResources": "res",
            "output": "dist"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "executableName": "gshell",
            "icon": "res/512x512.png",
            "synopsis": "Interactive graphical desktop environment for LiveG OS.",
            "category": "System"
        }
    }
}
